# Production Environment Configuration

# API Endpoints
WEATHER_API_BASE_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact
GEOCODING_API_BASE_URL=https://nominatim.openstreetmap.org/search

# Cache Settings
CACHE_DURATION=3600
MAX_CACHE_SIZE=100MB
CACHE_STRATEGY=stale-while-revalidate

# Performance
ENABLE_COMPRESSION=true
MINIFY_ASSETS=true
CDN_ENABLED=true

# Security
API_RATE_LIMIT=100
CORS_ALLOWED_ORIGINS=https://weather-app.example.com
ENABLE_HTTPS=true

# Monitoring
ENABLE_ERROR_TRACKING=true
LOG_LEVEL=error

# Feature Flags
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_NOTIFICATIONS=true

# Third Party Services
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
ANALYTICS_ID=UA-XXXXXXXX-X
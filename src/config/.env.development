# API Endpoints
WEATHER_API_BASE_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact
GEOCODING_API_BASE_URL=https://nominatim.openstreetmap.org/search

# Debug Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Cache Settings
CACHE_DURATION=3600
MAX_CACHE_SIZE=100

# Development Server
PORT=3000
HOST=localhost

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Error Reporting
SENTRY_DSN=
ENABLE_ERROR_REPORTING=true

# Feature Flags
ENABLE_WEATHER_CACHE=true
ENABLE_LOCATION_CACHE=true
ENABLE_DARK_MODE=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_DEV_TOOLS=true
BUNDLE_ANALYZER=true